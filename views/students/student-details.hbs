<div class="row mx-auto">
    <div class="col-md-6 row">
        <img src={{user.profileImg}} alt="profileImage" style="width: 70%;">
    </div>
    <div class="col-md-6">
        <h2>{{user.username}}</h2>
        <h4>Role: {{user.userRoles}}</h4>
        <p>{{user.email}} <br>{{user.description}}</p>
        {{#if isOwner.is}}
        <a href="/{{user.id}}/editar" class="btn btn-warning">Editar</a>
        {{/if}}
        {{#if userRole.isPm}}
        <a href="/pm/{{user.id}}/editar" class="btn btn-dark">Editar</a>
        <form action="/pm/{{user.id}}/eliminar" method="POST" style="display: inline">
            <input type="submit" value="Eliminar" class="btn  btn-danger">
        </form>
        {{/if}}
    </div>
</div>